<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    <h1 class="text-center mb-3">Restaurants</h1>
      <ul class="list-group">
        <% @restaurants.each do |restaurant| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= restaurant.name %>
            <%= restaurant.address %>
            <%= restaurant.phone_number %>
            <%= link_to "Plus d'info", restaurant, class: "btn btn-info" %>
          </li>
        <% end %>
      </ul>
      <div class="text-center mt-3">
        <%= link_to "Ajouter un nouveau restaurant", 'restaurants/new', class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
